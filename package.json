{
  "name": "storeapp",
  "version": "0.0.0",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "start": "npm run build && node dist/index.js",
    "build": "tsc -b --verbose && shx --verbose cp -ru public dist/","start:watch": "nodemon",
    "watch": "jest --watch --coverage",
    "test": "jest --colors --coverage"
  },
  "nodemonConfig": {
    "ignore": [
        "**/*.test.ts",
        "**/*.spec.ts",
        ".git",
        "node_modules"
    ],
    "watch": [
        "src"
    ],
    "exec": "npm run build && npm start",
    "ext": "ts"
},
  "dependencies": {
    "debug": "^2.6.9",
    "express": "^4.19.2",
    "http-errors": "^1.6.3",
    "morgan": "^1.9.1",
    "pug": "^3.0.3",
    "express-session": "^1.17.2",
    "express-flash-plus": "^0.0.7",
    "jest-runner": "^29.7.0"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.0",
    "typescript": "^5.5.2",
    "@types/debug": "^4.1.12",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.8",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "jest-extended": "^4.0.2",
    "nodemon": "^3.1.4",
    "shx": "^0.3.4",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "ts-jest": "^29.1.5"
  }
}
