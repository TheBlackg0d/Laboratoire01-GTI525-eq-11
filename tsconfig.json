{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "sourceMap": true,
    "incremental": true,
    "typeRoots": ["src/types", "node_modules/@types"]
  },
  "include": ["src/**/*.ts", "global.d.ts", "src/config/db.ts"],
  "exclude": ["node_modules"]
}
